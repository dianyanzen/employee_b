<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:descendantFocusability="blocksDescendants">
    <!-- Thumbnail Image -->



        <TableLayout
            android:id="@+id/score_table"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow>

                <TextView
                    android:id="@+id/txtWR_Date"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_column="0"
                    android:layout_marginRight="2dp"
                    android:text="Date"
                    android:textAlignment="center"
                    android:textColor="#242424" />

                <TextView
                    android:id="@+id/txtWR_TimeIn"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_column="1"
                    android:layout_marginRight="2dp"
                    android:text="Clock In"
                    android:textAlignment="center"
                    android:textColor="#242424" />

                <TextView
                    android:id="@+id/txtWR_TimeOut"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_column="2"
                    android:layout_marginRight="2dp"
                    android:text="Clock Out"
                    android:textAlignment="center"
                    android:textColor="#242424" />

                <TextView
                    android:id="@+id/txtWR_WH"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_column="2"
                    android:layout_marginRight="2dp"
                    android:text="Total (WH)"
                    android:textAlignment="center"
                    android:textColor="#242424" />

                <TextView
                    android:id="@+id/txtRemark"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_column="2"
                    android:layout_marginRight="2dp"
                    android:text="Remark"
                    android:textAlignment="center"
                    android:textColor="#242424" />
            </TableRow>
        </TableLayout>
</RelativeLayout>