<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.co.arkamaya.cico.id.co.arkamaya.bc_android.ExcuseFragment"
    android:layout_margin="2dp" android:descendantFocusability="blocksDescendants">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btnAdd"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnResync"
        android:background="#3f51b4"
        android:textColor="#ffffff" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resync"
        android:id="@+id/btnResync"
        android:textColor="#ffffff"
        android:layout_below="@+id/btnClockIn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#8ab23c" android:layout_marginLeft="3dp" />

    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:layout_below="@+id/btnAdd" android:layout_marginTop="3dp"
        android:focusable="true" />

</RelativeLayout>
