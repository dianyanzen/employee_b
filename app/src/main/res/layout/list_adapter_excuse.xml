<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp">
    <!-- Thumbnail Image -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-03"
        android:id="@+id/txtProdMonth"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="05"
        android:id="@+id/txtDate"
        android:layout_below="@+id/txtProdMonth"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:textAlignment="center"
        android:background="#FF4081"
        android:textColor="#ffffff"
        android:layout_toStartOf="@+id/txtExcueseType" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Employee Name"
        android:id="@+id/txtEmployeeName"
        android:layout_alignTop="@+id/txtProdMonth"
        android:paddingLeft="7dp"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/txtDate"
        android:paddingStart="7dp"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtExcuseDescription"
        android:layout_below="@+id/txtExcueseType"
        android:paddingLeft="7dp"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/txtDate"
        android:paddingStart="7dp"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lupa Clock Out"
        android:layout_below="@+id/txtEmployeeName"
        android:id="@+id/txtExcueseType"
        android:paddingLeft="2dp"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/txtProdMonth"

        android:paddingStart="7dp"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDelete"
        android:textColor="#ffffff"
        android:drawableLeft="@android:drawable/ic_delete"
        android:text="Delete"
        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="id"
        android:id="@+id/txtExcuseId"
        android:layout_alignTop="@+id/txtOvertimeHour"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="id"
        android:id="@+id/txtEmployeeId"
        android:layout_alignTop="@+id/txtOvertimeHour"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="accepted"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:id="@+id/txtExcuseStatus"
        android:textColor="#06aa17"
        android:layout_below="@+id/txtProdMonth"
        android:layout_alignParentEnd="true" />
    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnReject"
        android:textColor="#ffffff"
        android:src="@drawable/ic_clear_black_24dp"
        android:tint="#fff"
        android:backgroundTint="#ff0000"
        android:text=""
        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        />
    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAprove"
        android:textColor="#ffffff"
        android:src="@drawable/ic_check_black_24dp"
        android:tint="#fff"
        android:backgroundTint="#00ff00"
        android:text=""
        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnReject"
        android:visibility="invisible"/>


</RelativeLayout>
