<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:descendantFocusability="blocksDescendants">
    <!-- Thumbnail Image -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-03"
        android:id="@+id/txtProdMonth"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:gravity="left"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="05"
        android:layout_marginLeft="5dp"
        android:id="@+id/txtDate"
        android:textSize="23dp"
        android:textAlignment="center"
        android:background="#3f51b4"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtProdMonth"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txtProdMonth" />
    <TextView
        android:id="@+id/txtScheduleActivityType"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/txtDate"
        android:layout_toEndOf="@+id/txtDate"
        android:layout_weight="1"
        android:gravity="left"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtScheduleActivityDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtScheduleActivityType"
        android:layout_alignStart="@+id/txtScheduleActivityType"
        android:layout_toStartOf="@+id/btnDelete"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/txtScheduleActivityType"
        android:textColor="@color/colorGray"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="left"
        android:layout_marginBottom="10dp"
        android:text="TextView"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDelete"
        android:textColor="#ffffff"
        android:layout_marginRight="5dp"
        android:drawableLeft="@android:drawable/ic_delete"
        android:text="Delete"
        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/txtScheduleActivityId"
        android:visibility="invisible"
        android:layout_above="@+id/txtScheduleActivityDescription"
        android:layout_toStartOf="@+id/btnDelete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginRight="10dp"
        android:text="accepted"
        android:id="@+id/txtScheduleActivityStatus"
        android:textColor="#06aa17"
        android:layout_below="@+id/txtProdMonth"
        android:layout_alignParentEnd="true" />
</RelativeLayout>