<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:descendantFocusability="blocksDescendants">
    <!-- Thumbnail Image -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-03"
        android:id="@+id/txtProdMonth"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="05"
        android:id="@+id/txtDate"
        android:textSize="23dp"
        android:textAlignment="center"
        android:background="#212121"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtProdMonth"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txtOvertimeDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tol Krawang Barat - Ja.."
        android:id="@+id/txtOvertimeDescription"
        android:paddingLeft="5dp"
        android:textColor="#242424"
        android:layout_alignBottom="@+id/txtDate"
        android:layout_alignStart="@+id/txtOvertimeHour"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtOvertimeHour"
        android:paddingLeft="5dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_above="@+id/txtOvertimeDescription"
        android:layout_toEndOf="@+id/txtProdMonth"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hour"
        android:id="@+id/txtHour"
        android:paddingLeft="5dp"
        android:textColor="#000000"
        android:layout_above="@+id/txtOvertimeDescription"
        android:layout_toEndOf="@+id/txtOvertimeHour"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDelete"
        android:textColor="#ffffff"
        android:drawableLeft="@android:drawable/ic_delete"
        android:text="Delete"
        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="id"
        android:id="@+id/txtOvertimeId"
        android:layout_alignTop="@+id/txtOvertimeHour"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="accepted"
        android:id="@+id/txtOvertimeStatus"
        android:textColor="#06aa17"
        android:layout_below="@+id/txtProdMonth"
        android:layout_alignParentEnd="true" />

</RelativeLayout>