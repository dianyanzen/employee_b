<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Title"
                android:id="@+id/lbltitle"
                android:textStyle="bold|italic"
                android:textSize="14dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txttitle"
                android:layout_below="@+id/lbltitle"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:singleLine="true" android:imeOptions="actionNext"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Gender"
                android:id="@+id/lblGender"
                android:textStyle="bold|italic"
                android:textSize="14dp"
                android:layout_below="@+id/txttitle"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spnGender"
                android:layout_below="@+id/lblGender"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B6B6B6"
                android:id="@+id/linegender"
                android:layout_below="@+id/spnGender"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Born Date"
                android:id="@+id/lblBornDate"
                android:layout_below="@+id/linegender"
                android:textStyle="bold|italic"
                android:textSize="14dp"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/txtBornDate"
                android:layout_below="@+id/lblBornDate"
                android:layout_alignParentStart="true"
                android:hint=" yyyy-mm-dd"
                android:layout_toStartOf="@+id/btnDatePicker"
                android:focusable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Born Place"
                android:id="@+id/lblBornPlace"
                android:textStyle="bold|italic"
                android:textSize="14dp"
                android:layout_below="@+id/txtBornDate"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtBornPlace"
                android:layout_below="@+id/lblBornPlace"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:singleLine="true" android:imeOptions="actionNext"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Religion"
                android:id="@+id/lblreligion"
                android:textStyle="bold|italic"
                android:textSize="14dp"
                android:layout_below="@+id/txtBornPlace"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtreligion"
                android:layout_below="@+id/lblreligion"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:singleLine="true" android:imeOptions="actionNext"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Maried Status"
                android:id="@+id/lblmeriedstatus"
                android:textStyle="bold|italic"
                android:textSize="14dp"
                android:layout_below="@+id/txtreligion"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spnmariedstatus"
                android:layout_below="@+id/lblmeriedstatus"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B6B6B6"
                android:id="@+id/linemeriedstatus"
                android:layout_below="@+id/spnmariedstatus"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Maried Since"
                android:id="@+id/lblmeriedsince"
                android:textStyle="bold|italic"
                android:textSize="14dp"
                android:layout_below="@+id/linemeriedstatus"
                android:layout_alignParentStart="true" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/txtmeriedsince"
                android:layout_below="@+id/lblmeriedsince"
                android:layout_alignParentStart="true"
                android:hint=" yyyy-mm-dd"
                android:layout_toStartOf="@+id/btnDatePicker2"
                android:focusable="false" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Photo"
                android:id="@+id/btnchangephoto"
                android:layout_below="@+id/txtmeriedsince"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/textView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=":"
                android:id="@+id/textView7"
                android:textStyle="bold|italic"
                android:textSize="14dp"
                android:layout_below="@+id/txtmeriedsince"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Photo"
                android:id="@+id/btnViewchangephoto"
                android:layout_alignBottom="@+id/btnchangephoto"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/textView7" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B6B6B6"
                android:id="@+id/line2"
                android:layout_below="@+id/btnchangephoto"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/btnSave"
                android:background="#3f51b4"
                android:textColor="#ffffff"
                android:layout_below="@+id/line2"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/btnViewchangephoto" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/btnCancel"
                android:layout_below="@+id/btnSave"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/btnViewchangephoto"
                android:background="#D32F2F"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtPhotoFile"
                android:visibility="invisible"
                android:layout_below="@+id/btnCancel"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgReimburse"
                android:src="@mipmap/ic_launcher"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtMode"
                android:layout_below="@+id/btnCancel"
                android:layout_toEndOf="@+id/lblDate"
                android:visibility="invisible" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:id="@+id/btnDatePicker"
                android:layout_alignBottom="@+id/txtBornDate"
                android:layout_alignParentEnd="true" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:id="@+id/btnDatePicker2"
                android:layout_alignBottom="@+id/txtmeriedsince"
                android:layout_alignParentEnd="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="*        "
                android:id="@+id/textView11"
                android:textStyle="bold|italic"
                android:textSize="14dp"
                android:textColor="#ff0000"
                android:layout_above="@+id/spnGender"
                android:layout_toEndOf="@+id/lblGender" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="*        "
                android:id="@+id/textView12"
                android:textStyle="bold|italic"
                android:textSize="14dp"
                android:textColor="#ff0000"
                android:layout_above="@+id/txtBornDate"
                android:layout_toEndOf="@+id/lblBornDate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="*        "
                android:id="@+id/textView13"
                android:textStyle="bold|italic"
                android:textSize="14dp"
                android:textColor="#ff0000"
                android:layout_above="@+id/txtBornPlace"
                android:layout_toEndOf="@+id/lblBornPlace" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="*        "
                android:id="@+id/textView14"
                android:textStyle="bold|italic"
                android:textSize="14dp"
                android:textColor="#ff0000"
                android:layout_above="@+id/txtreligion"
                android:layout_toEndOf="@+id/lblreligion" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="*        "
                android:id="@+id/textView15"
                android:textStyle="bold|italic"
                android:textSize="14dp"
                android:textColor="#ff0000"
                android:layout_above="@+id/spnmariedstatus"
                android:layout_toEndOf="@+id/lblmeriedstatus" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
